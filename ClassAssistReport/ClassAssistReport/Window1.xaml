<Window x:Class="ClassAssistReport.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cr="clr-namespace:SAPBusinessObjects.WPF.Viewer;assembly=SAPBusinessObjects.WPF.Viewer"
        Title="Generar Informe" Height="411" Width="557"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#FFF1FFB6">
        <Button x:Name="btnGenerarInforme" HorizontalAlignment="Center" VerticalAlignment="Top" Height="84" Width="302" FontSize="20" FontWeight="Bold" Click="btnGenerarInforme_Click" Margin="0,160,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="FileDocument" Width="32" Height="32" Margin="0,0,10,0"/>
                <TextBlock Text="Generar Informe" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnUnSoloAlumno" Content="De un solo Alumno" HorizontalAlignment="Center" Margin="0,108,0,0" VerticalAlignment="Top" Click="btnUnSoloAlumno_Click"/>
        <Button x:Name="btnDeLaClase" Content="De toda la clase" HorizontalAlignment="Center" Margin="0,269,0,0" VerticalAlignment="Top" Click="btnDeLaClase_Click"/>

    </Grid>
</Window>
